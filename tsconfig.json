{
	"compileOnSave": true,
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"emitBOM": false,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es2019",
			"es2020.bigint",
			"es2020.promise",
			"es2020.string"
		],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"target": "ES2019"
	},
	"include": [
		"./src/**/*.ts"
	]
}
